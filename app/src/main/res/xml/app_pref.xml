<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Tardy Settings">
        <EditTextPreference
            android:key="pref_user"
            android:inputType="textCapWords"
            android:title="Username" />
        <EditTextPreference
            android:key="pref_desired"
            android:inputType="numberDecimal"
            android:title="Desired Percentage"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="About">
        <Preference
            android:title="Meet my creator"
            android:key="githubLink">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.github.com/KunalRaghav"/>
        </Preference>
        <Preference
            android:title="Check for updates"
            android:key="releaseLink">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.github.com/KunalRaghav/Tardy/releases"/>
        </Preference>
        <Preference
            android:title="Version"
            android:summary="@string/app_version"/>
    </PreferenceCategory>
</PreferenceScreen>