<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_Deer"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingTop="12dp"
    app:contentPaddingBottom="0dp"
    android:layout_margin="10dp"
    android:elevation="4dp"
    android:translationZ="5dp"
    app:cardCornerRadius="10dp">
    <TextView
        android:paddingLeft="12dp"
        android:id="@+id/subViewsubName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:maxLines="3"
        android:breakStrategy="balanced"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="SubjectName hghghgh ghghgh dfdfdffdfdfd"/>

    <TextView
        android:layout_marginRight="12dp"
        android:id="@+id/subViewperc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="jhjhjh"
        android:padding="8dp"
        android:background="@color/color_Deer"
        android:layout_gravity="right"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_menu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="100dp"
            android:weightSum="4"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp">
        <TextView
            android:id="@+id/subViewBunk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bunks Possible:"
            android:layout_weight="3"
            />
        <TextView
            android:id="@+id/subViewBunkValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="45"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>