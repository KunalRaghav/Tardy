<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="#33aaaaaa"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingBottom="0dp"
    android:layout_margin="4dp"
    app:strokeWidth="1dp"
    android:elevation="0dp"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="12dp"
            android:id="@+id/subViewsubName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxLines="3"
            android:padding="16dp"
            android:breakStrategy="balanced"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000"
            tools:text="SubjectName hghghgh ghghgh dfdfdffdfdfd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/subViewperc"/>
        <TextView
            android:id="@+id/subViewperc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="jhjhjh"
            android:padding="8dp"
            android:background="@color/color_Deer"
            android:layout_marginBottom="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subViewsubName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_menu">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:weightSum="4"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/subViewBunk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Bunks Possible:"
                    android:layout_weight="3"
                    />
                <TextView
                    android:id="@+id/subViewBunkValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="45"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>